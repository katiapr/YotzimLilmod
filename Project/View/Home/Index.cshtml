@using YotzimLilmod.Models
@model YotzimLilmod.Models.UserModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<!doctype html>
<html>
<head>
    <meta http-equiv="content-type" content="text/plain; charset=UTF-8" />
    <title>יוצאים ללמוד</title>

    <link rel="stylesheet" href="~/Content/form.css">
    <style>
        body {
            background: url("../Images/background.png");
        }

        .header {
            width: 83.5%;
            box-shadow: 0px 3px 15px black;
        }
    </style>
    <script src="scripts/op.js"></script>
</head>
<body>
    <center><img class="header" src="../Images/banner.jpg" /></center>
    <div class="container" style="margin-top:0%; width:83.5%;">
        <div class="col-sm-6 col-sm-offset-3">
            <h1>כניסה<span class="fa fa-sign-in"></span></h1>

            <!-- show any messages that come back with authentication
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                //this  is for create form tag
                @Html.AntiForgeryToken()          // this is for prevent CSRF attack
                                                @Html.ValidationSummary(true)
                if (@ViewBag.Message != null)
                {
                    <div style="border: 1px solid red">
                        @ViewBag.Message
                    </div>
                }
                <div class="form-group">
                    @Html.LabelFor(a => a.UserName)
                    @Html.TextBoxFor(a => a.UserName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Password)
                    @Html.PasswordFor(a => a.Password)
                </div>
                <div class="form-group">
                    @Html.Label("זכור אותי")
                </div>
                <input type="submit" value="כניסה" class="btn btn-warning btn-lg" />
            }
            @*-----*@
            <hr>

        </div>
    </div>
</body>
</html>
