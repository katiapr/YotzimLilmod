@model YotzimLilmod.Models.StudentModel
@{
    Layout = null;
}
@Styles.Render("~/Content/profile.css")
@Styles.Render("~/Content/form.css")
@Scripts.Render("~/Scripts/op.js")
<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <meta http-equiv="content-type" content="text/plain; charset=UTF-8" />
    <title>יוצאים ללמוד</title>
    <link rel="stylesheet" href="~/Content/form.css"> <!-- load bootstrap css -->
    <script type="text/javascript" src="scripts/jquery-3.0.0.min.js"></script>
    <script src="scripts/op.js"></script>

    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
    <a id="logout" href="~/Records/ShowStudentsRecords" class="logoutFrame" style="color:white;width:50px; position:fixed; text-align:center;">חזור</a>
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1 style="text-align:right;"><span class="fa fa-sign-in"></span> עדכון פרטים</h1>

            <!-- show any messages that come back with authentication
             <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <<% } %>
            <hr>
            <!-- LOGIN FORM -->
            @using (@Html.BeginForm("UpdateStudentDetails", "Records", new { Id = @Model.StudentID }, FormMethod.Post, htmlAttributes: new { @onsubmit = "return checkForm()" }))
            {
                <div class="form-group" style="text-align:right;">
                    <label>שם פרטי</label>
                    <p>שם פרטי חייב להיות בעברית או אנגלית בלבד</p>
                    @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", @Value = @Model.StudentName })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>שם משפחה</label>
                    <p>שם משפחה חייב להיות בעברית או אנגלית בלבד</p>
                    @Html.TextBoxFor(m => m.StudentLastName, new { @class = "form-control", @Value = @Model.StudentLastName })
                </div>

                <div class="form-group" style="text-align:right;">
                    <label>תעודת זהות</label>
                    <p>מספרים בלבד</p>
                    @Html.TextBoxFor(m => m.StudentIDNumber, new { @class = "form-control", @Value = @Model.StudentIDNumber })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>תעודת זהות</label>
                    @Html.TextBoxFor(m => m.StudentIDNumber, new { @class = "form-control", @Value = @Model.StudentIDNumber })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>דואר אלקטרוני</label>
                    @Html.TextBoxFor(m => m.StudentEmail, new { @class = "form-control", @Value = @Model.StudentEmail })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>עיר </label>
                    @Html.TextBoxFor(m => m.StudentCity, new { @class = "form-control", @Value = @Model.StudentCity })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>קורס</label>
                    @Html.TextBoxFor(m => m.Course, new { @class = "form-control", @Value = @Model.Course })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>טלפון</label>
                    @Html.TextBoxFor(m => m.studentPhoneNumber, new { @class = "form-control", @Value = @Model.studentPhoneNumber })
                </div>
                <div class="form-group" style="text-align:right;">
                    <label>הערה</label>
                    @Html.TextBoxFor(m => m.Note, new { @class = "form-control", @Value = @Model.Note })
                </div>
                <button type="submit" class="btn btn-warning btn-lg">עדכן</button>
            }

            <hr>

        </div>

    </div>
</body>
</html>
